#!/usr/bin/env python3
import streamlit as st
import pandas as pd
import plotly.graph_objects as go
from sklearn.model_selection import train_test_split
from sklearn.ensemble import RandomForestClassifier
from sklearn.preprocessing import LabelEncoder
from sklearn.metrics import confusion_matrix, roc_curve, auc

st.set_page_config(page_title="Influenza Analysis Dashboard", layout="wide")
st.title("Influenza Surveillance Analysis Dashboard")
st.markdown("---")

@st.cache_data
def load_data():
    df = pd.read_csv("influenza_data.csv")
    
    if 'Unnamed' in str(df.columns[0]) or df.columns[0] == '':
        df = df.drop(columns=[df.columns[0]])
    
    df.columns = [c.strip().replace(' ', '_').replace('(', '').replace(')', '').replace('-', '_').lower() 
                  for c in df.columns]
    
    df['week_start_date'] = pd.to_datetime(df['week_start_date_iso_8601_calendar'])
    df['month'] = df['week_start_date'].dt.month
    df['season'] = df['month'].apply(lambda m: 'Winter' if m in [12,1,2] else 'Spring' if m in [3,4,5] else 'Summer' if m in [6,7,8] else 'Fall')
    df['has_positive_cases'] = (df['influenza_positive'] > 0).astype(int)
    
    return df

@st.cache_resource
def train_model(df):
    le_country = LabelEncoder()
    le_site = LabelEncoder()
    le_season = LabelEncoder()

   
    X = pd.DataFrame({
        'country': le_country.fit_transform(df['country_area_or_territory']),
        'site': le_site.fit_transform(df['surveillance_site_type']),
        'season': le_season.fit_transform(df['season']),
        'specimen_tested': df['specimen_tested']
    })
    
    y = df['has_positive_cases']
    X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.3, random_state=42)
    
    model = RandomForestClassifier(n_estimators=50, max_depth=5, random_state=42)
    model.fit(X_train, y_train)
    
    return model, X_test, y_test, model.predict(X_test), model.predict_proba(X_test)[:, 1]

with st.spinner("Loading data..."):
    df = load_data()
    model, X_test, y_test, y_pred, y_proba = train_model(df)

st.success(f"Data loaded: {len(df):,} records")

col1, col2 = st.columns(2)

with col1:
    st.subheader("Chart 1: Cases by Season")
    
    season_data = df.groupby('season')['influenza_positive'].sum().reset_index()
    
    fig1 = go.Figure()
    fig1.add_trace(go.Bar(
        x=season_data['season'],
        y=season_data['influenza_positive'],
        name='Total Cases',
        marker_color='lightblue'
    ))
    
    fig1.update_layout(
        title="Influenza Positive Cases by Season",
        xaxis_title="Season",
        yaxis_title="Number of Cases",
        height=400
    )
    st.plotly_chart(fig1, use_container_width=True)
    st.metric("Total Positive Cases", f"{df['influenza_positive'].sum():,.0f}")

with col2:
    st.subheader("Chart 2: Model Performance")
    
    cm = confusion_matrix(y_test, y_pred)
    
    fig2 = go.Figure(data=go.Heatmap(
        z=cm,
        x=['No Cases', 'Positive'],
        y=['No Cases', 'Positive'],
        colorscale='Blues',
        text=cm,
        texttemplate='%{text}',
        textfont={"size": 16}
    ))
    
    fig2.update_layout(
        title="Confusion Matrix - Model Predictions",
        xaxis_title="Predicted",
        yaxis_title="Actual",
        height=400
    )
    
    st.plotly_chart(fig2, use_container_width=True)
    
    accuracy = (cm[0,0] + cm[1,1]) / cm.sum()
    st.metric("Model Accuracy", f"{accuracy:.1%}")

st.markdown("---")
st.subheader("Additional Metrics")

col3, col4, col5 = st.columns(3)

with col3:
    st.metric("Countries Analyzed", df['country_area_or_territory'].nunique())

with col4:
    st.metric("Period", f"{df['week_start_date'].min().year} - {df['week_start_date'].max().year}")

with col5:
    prevalence = df['has_positive_cases'].mean()
    st.metric("Prevalence", f"{prevalence:.1%}")

st.markdown("---")
st.subheader("Chart 3: ROC Curve")

fpr, tpr, _ = roc_curve(y_test, y_proba)
roc_auc = auc(fpr, tpr)

fig3 = go.Figure()

fig3.add_trace(go.Scatter(
    x=fpr,
    y=tpr,
    name=f'ROC Curve (AUC = {roc_auc:.3f})',
    mode='lines',
    line=dict(color='blue', width=2)
))

fig3.add_trace(go.Scatter(
    x=[0, 1],
    y=[0, 1],
    name='Random Baseline',
    mode='lines',
    line=dict(color='red', dash='dash')
))

fig3.update_layout(
    title="ROC Curve - Model Discriminative Capacity",
    xaxis_title="False Positive Rate",
    yaxis_title="True Positive Rate",
    height=400
)

st.plotly_chart(fig3, use_container_width=True)

